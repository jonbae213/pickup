<!DOCTYPE html>
<html>
  <head>
    <title>Pickup (formerly Masspickup)</title>
    <link rel="icon" type="image/png" href="<%= image_url('pickup_icon.png') %>"/>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if logged_in? %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "full_name": "<%= current_user.full_name %>",
          "email": "<%= current_user.email %>",
          "hobby_ids": <%= get_current_user_hobbies %>,
          "thing_ids": <%= get_current_user_things %>
        }
      </script>
    <% end %>
    <script type="text/javascript">
      window.logo = "<%= image_url('pickup_logo.jpg') %>";
      window.rgbKeyboard = "<%= image_url('home_keyboard.jpg') %>";
      window.logoNegative = "<%= image_url('logo_negative.jpg') %>";
      window.searchIcon = "<%= image_url('search_icon.png') %>";
      window.bookmarkIcon = "<%= image_url('bookmark-icon.png') %>";
      window.reviewIcon = "<%= image_url('review-icon.png') %>";
      window.bookmarkedIcon = "<%= image_url('bookmarked-icon.png') %>";
      window.followIcon = "<%= image_url('follow-icon.png') %>";
      window.unfollowIcon = "<%= image_url('unfollow-icon.png') %>";
      window.carousel1 = "<%= image_url('carousel1.jpg') %>";
      window.carousel2 = "<%= image_url('carousel2.jpg') %>";
      window.carousel3 = "<%= image_url('carousel3.jpg') %>";
      window.rightArrow = "<%= image_url('right-arrow.png') %>";
      window.leftArrow = "<%= image_url('left-arrow.png') %>";
      window.stockPhoto = "<%= image_url('jlc_reverso.jpg') %>";
      window.showPage = "<%= image_url('show_image.jpg') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
